<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="6sp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startStation_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="出发出发"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/startTime_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textSize="18sp"
            android:textColor="	#1E90FF"/>

        <TextView
            android:id="@+id/leftSeat1_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="seat1"
            android:textColor="#BDB76B"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:textSize="18dp"
            android:textAlignment="center"
            android:id="@+id/trainID_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="G1111"/>

        <!--<TextView-->
            <!--android:textSize="30sp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:text="-&ndash;&gt;"-->
            <!--android:textAlignment="center"/>-->
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0小时0分"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/leftSeat2_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="seat2"
            android:textAlignment="center"
            android:textColor="#BDB76B"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arriveStation_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="到站到站"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/arriveTime_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textColor="	#1E90FF"/>

        <TextView
            android:id="@+id/leftSeat3_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="seat3"
            android:textAlignment="textEnd"
            android:textColor="#BDB76B"/>



    </LinearLayout>

</LinearLayout>